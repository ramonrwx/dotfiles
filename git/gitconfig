# vim: set filetype=gitconfig
# vim: ts=2 sts=2 sw=2 et
[user]
  name  = Ramon Rodrigues
  email = sir@ramonrodrigu.es
  signingkey = sir@ramonrodrigu.es
[core]
  editor = nvim
[alias]
  a      = add -u
  c      = commit
  ca     = commit --amend
  can    = commit --amend --no-edit
  ci     = commit -s
  co     = checkout
  fixup  = commit --fixup
  ignore = "!git-ignore $1"
  l      = log --oneline
  lfixes = log --pretty=fixes
  ll     = log --pretty=line --date=short
  lll    = log --pretty=lineauthor --date=short
  ra     = rebase --abort
  rc     = rebase --continue
  ri     = rebase -i
  rp     = reset -p HEAD^
  s      = status --short --branch
  wip    = commit -asm 'wip'
[color]
  ui = true
[pretty]
  fixes      = "Fixes: %h (\"%s\")"
  line       = %C(auto)%h %C(auto,cyan)%ad %C(auto,magenta)%<(14,trunc)%an%C(auto)%d %C(auto,reset)%s%C(auto,cyan)
  lineauthor = %C(auto)%h %C(auto,cyan)%ad %C(auto,magenta)%<(14,trunc)%an%C(auto)%d %C(auto,reset)%s%C(auto,cyan)%<(60,trunc) %(trailers:key=Acked-by,key=Reviewed-by,key=Tested-by,unfold,separator=%x2C )%C(auto,reset)
[color "status"]
  added     = green
  changed   = yellow
  untracked = red
[color "branch"]
  current = white
  remote  = blue
[color "diff"]
  meta = yellow
  old  = red
  new  = green
[pull]
  ff = only
[push]
  autoSetupRemote = true
  followTags = yes
[commit]
  gpgSign = false
  verbose = true
[init]
  defaultBranch = main
[url "git@github.com:"]
  insteadOf = gh:
[url "git@git.sr.ht:"]
  insteadOf = srht:
[gpg]
  program = gpg
[sendemail]
  annotate          = yes
  assume8bitEncoing = UTF-8
  chainreplayto     = false
  envelopesender    = auto
  sendmailCmd       = /usr/bin/mjmap
  suppressCc        = self
[rerere]
  enabled = true
[filter "lfs"]
  clean    = git-lfs clean -- %f
  smudge   = git-lfs smudge -- %f
  process  = git-lfs filter-process
  required = true
[includeIf "gitdir:~/sources/"]
  path = ./.gitconfig.srht
